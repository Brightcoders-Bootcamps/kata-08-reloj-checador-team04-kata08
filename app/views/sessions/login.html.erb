<h1>Check-In</h1>

<% if flash[:notice] %> 
  <div id="notice"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div id="alert"><%= flash[:alert] %></div>
<% end %>

<p>Please, enter you private number</p>
<%= form_with(model: @employer, local:true) do |form| %>
  <div class="field">
    <%= form.label :private_number %>
    <%= form.number_field :privatenumber %>
  </div>

    <%= form.submit %>
<% end %>



